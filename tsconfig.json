{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": "./src",
    "lib": ["ES2020", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["*"]
    },
    "skipLibCheck": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
